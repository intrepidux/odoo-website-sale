<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <template id="minimum_order_value" name="Minimum Order Value" inherit_id="website_sale.payment">
      <xpath expr="//div[@id='payment_method']" position="before">
        <div t-if="website.check_minimum_order_value()" class="row" id="minimum_order_value">
          <div class="col-lg-5 col-sm-6 alert alert-danger">
            <h4>Minimum Order value</h4>
            <div class="alert alert-warning" t-esc='website.check_minimum_order_value()'/>
          </div>
        </div>
      </xpath>
    </template>
    </data>
</openerp>
