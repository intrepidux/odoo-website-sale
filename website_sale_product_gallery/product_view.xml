<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <template id="product" inherit_id="website_sale.product">
            <xpath expr="//section[@id='product_detail']/div[@class='row']/div[@class='col-sm-7 col-md-7 col-lg-7']" position="replace">
                <div class="col-sm-7 col-md-7 col-lg-7">
                    <!-- display image zoom -->
                    <div class="image_zoom"/>
                    <div id="image_big" class="tab-content">
                        <span itemprop="image" t-field="product.image" t-field-options='{"widget": "image", "class": "product_detail_img hidden", "alt-field": "name"}'/>
                        <t t-foreach="product.image_ids" t-as="i">
                            <div t-att-id="i.id" t-att-class="'tab-pane fade %s' %('in active' if i_index == 0 else '')">
                                <img class="img img-responsive" style="margin: auto;" t-att-src="'/imagefield/base_multi_image.image/file_db_store/%s/ref/%s' %(i.id, 'product_gallery.img_product_detail')"/>
                            </div>
                        </t>
                    </div>
                    <ul id="image_nav" class="nav nav-pills">
                        <t t-foreach="product.image_ids" t-as="i">
                            <li class="'active' if i_index == 0 else ''">
                                <a data-toggle="tab" t-att-href="'#%s' %i.id">
                                    <img class="img img-responsive" t-att-src="'/imagefield/base_multi_image.image/file_db_store/%s/ref/%s' %(i.id, 'product_gallery.img_product_thumbnail')"/>
                                </a>
                            </li>
                        </t>
                    </ul>
                </div>
            </xpath>
        </template>

        <template id="assets_frontend" inherit_id="website.assets_frontend" name="Website assets - Product Gallery">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/product_gallery/static/src/css/gallery.css" t-ignore="true"/>
                <script type="text/javascript" src="/product_gallery/static/src/js/gallery.js"></script>
            </xpath>
        </template>

    </data>
</openerp>
